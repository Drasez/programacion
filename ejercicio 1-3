#include "stdafx.h"
#include <iostream>
#include "conio.h"

using namespace std;
void main ()
{
	int n,suma,i,count;
	cin>> n;
	suma= 0;
	count= 1;
	i=1;
	while (i<=n)
	{
		suma=suma+count;
		count=count+2;
		i=i+1;
	}
		
		cout<<"la suma de los "<<n<<" primeros numeros es:"<<suma;
	
getch ();
}
