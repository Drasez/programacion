#include "stdafx.h"
#include "conio.h"
#include <iostream>
#include "math.h"

using namespace std;
void main ()
{
   int a,b;
   cout<<"ingrese a ";
   cin>> a;
   cout<<"ingrese b ";
   cin>> b;
   if ((a%2== 0)	&& (b%2== 0))
    cout<<"resultado es:"<<(a+b);
   else
    cout<<"El rsultado es "<<(a*b);
   getch();

}
